<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="35dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/left_arrow"
            app:tint="@color/primary" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/img15"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="joshua_l"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/callBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/cam_recorder" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/info"
            app:tint="@color/primary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom|end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4:49 PM"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textColor="@color/gray_medium"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/message_bubble"
            android:layout_marginEnd="8dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="40dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="40dp"
            android:background="@drawable/message_box"
            android:hint="Message..."
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_medium" />

        <RelativeLayout
            android:id="@+id/camera"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="5dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

<!--            <ImageView-->
<!--                android:layout_width="32dp"-->
<!--                android:layout_height="32dp"-->
<!--                android:src="@drawable/circle_primary"/>-->

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/camera"
                android:layout_centerInParent="true"
                app:tint="@color/primary"
                android:layout_marginEnd="6dp" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/mic"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toStartOf="@+id/gallery"
            android:layout_centerVertical="true"
            android:src="@drawable/mic"
            android:layout_marginStart="6dp" />

        <ImageView
            android:id="@+id/gallery"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toStartOf="@+id/stickers"
            android:layout_centerVertical="true"
            android:src="@drawable/gallery"
            android:layout_marginStart="6dp" />

        <ImageView
            android:id="@+id/stickers"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/sticker"
            android:layout_marginStart="6dp" />

    </RelativeLayout>


</LinearLayout>
