<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingVertical="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="3dp">

        <RelativeLayout
            android:id="@+id/searchBox"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_toStartOf="@+id/cameraBtn"
            android:layout_marginEnd="12dp"
            android:background="@color/transparent"
            android:paddingHorizontal="12dp">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/search"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                app:tint="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/searchIcon"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:text="Search"
                android:textColor="@color/primary"
                android:textSize="16sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/cameraBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/scanner"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:tint="@color/primary"
            android:background="@color/transparent" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="5dp"
            android:paddingHorizontal="5dp"
            android:background="@drawable/input_transparent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/shopping_bag"
                android:layout_gravity="center"
                android:paddingHorizontal="3dp"
                app:tint="@color/primary" />

            <TextView
                android:id="@+id/shopTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:paddingVertical="8dp"
                android:text="Shop"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:background="@drawable/input_transparent"
            android:text="Style"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:background="@drawable/input_transparent"
            android:text="Sports"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/autoTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:background="@drawable/input_transparent"
            android:text="Auto"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/musicTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:background="@drawable/input_transparent"
            android:text="Music"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="14sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:orientation="horizontal"
            android:alignmentMode="alignMargins">

            <!-- Just leave blank placeholders, you can set your own images later -->

            <ImageView
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:src="@drawable/img1"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:layout_marginEnd="2dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="262dp"
                android:src="@drawable/img3"
                android:layout_columnWeight="2"
                android:layout_rowSpan="2"
                android:layout_columnSpan="2"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:src="@drawable/img2"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="0"
                android:scaleType="centerCrop"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:src="@drawable/img4"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_column="0"
                android:scaleType="centerCrop"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:src="@drawable/img5"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:src="@drawable/img7"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:src="@drawable/img6"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:src="@drawable/img8"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:src="@drawable/img9"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="262dp"
                android:src="@drawable/img10"
                android:layout_columnWeight="2"
                android:layout_rowSpan="2"
                android:layout_columnSpan="2"
                android:scaleType="centerCrop"
                android:layout_marginEnd="2dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:src="@drawable/img11"
                android:layout_columnWeight="1"
                android:layout_row="4"
                android:layout_column="2"
                android:scaleType="centerCrop"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:src="@drawable/img12"
                android:layout_columnWeight="1"
                android:layout_row="5"
                android:layout_column="2"
                android:scaleType="centerCrop"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"/>


            <!-- Duplicate these ImageViews as many times as needed -->

        </GridLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/homeBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/home"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="45dp"
            android:background="@color/transparent"
            app:tint="@color/primary" />

        <ImageView
            android:id="@+id/searchBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/search_nav"
            android:layout_toEndOf="@+id/homeBtn"
            android:layout_centerVertical="true"
            android:layout_marginEnd="45dp"
            android:background="@color/transparent"
            app:tint="@color/primary" />

        <ImageView
            android:id="@+id/addBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/plus_nav"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="45dp"
            android:background="@color/transparent"
            app:tint="@color/primary"/>

        <ImageView
            android:id="@+id/heartBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/liked"
            android:layout_toStartOf="@+id/profileBtn"
            android:layout_centerVertical="true"
            android:layout_marginEnd="45dp"
            android:background="@color/transparent"
            app:tint="@color/primary"/>

        <ImageView
            android:id="@+id/profileBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/profile_image"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:tint="@color/primary"/>

    </LinearLayout>

</LinearLayout>